<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.boostcamp.final_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".View.NewItemActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" /> <!-- 화면 세로 고정 -->
        </activity>
        <activity android:name=".View.PermissionActivity" />
        <activity android:name=".View.SettingActivity">
        </activity>

        <service android:name=".Util.GeofenceService" />

        <activity android:name=".View.LicenseActivity" />

        <activity
            android:name=".View.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".View.ItemDetailActivity" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <service
            android:name=".Util.GeofencingService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>