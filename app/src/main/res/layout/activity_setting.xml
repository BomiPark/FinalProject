<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="project.boostcamp.final_project.UI.Setting.SettingActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="46dp" />
    </FrameLayout>

    <TextView
        android:text="@string/setting"
        android:textColor="@color/click_back"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/setting_text"
        android:textSize="22dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="위치설정"
        android:background="@drawable/folder_select" />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="@string/setting_push" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/Widget.AppCompat.Button.Borderless.Colored"
           android:text="@string/on"
           android:layout_marginLeft="30dp"
           android:textSize="14sp"
           android:id="@+id/on"
           android:textColor="@color/gray"/>

        <Switch
            android:id="@+id/switchBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/off"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/off"
            android:textSize="14sp"
            android:textColor="@color/click_back"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:text="@string/radius"/>

        <SeekBar
            android:id="@+id/radiusBar"
            android:layout_marginTop="40dp"
            android:layout_width="200dp"
            android:progress="300"
            android:max="500"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/radiusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/gray"
            android:layout_alignBottom="@id/radiusBar"
            android:layout_toEndOf="@+id/radiusBar"
            android:text="@string/meter" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_login"
            android:onClick="onClick"
            android:text="login"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_backup"
            android:onClick="onClick"
            android:text="backup"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/get_data"
            android:onClick="onClick"
            android:text="getData"/>


    </LinearLayout>

</LinearLayout>
