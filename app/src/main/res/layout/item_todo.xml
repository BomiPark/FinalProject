<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="277dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:id="@+id/item_main"
        android:background="@drawable/ellipse">

        <TextView
            android:text="2017년 02월 22일"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="6.3sp"
            android:id="@+id/textDate" />

        <TextView
            android:text="액셀 책사기"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:textSize="13.3sp"
            android:id="@+id/textTodo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="20dp">

            <ImageView
                android:layout_width="6.8dp"
                android:layout_height="9.5dp"
                android:id="@+id/imageView5"
                android:gravity="center"
                android:src ="@drawable/location_icon"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <TextView
                android:text="서울시 성동구 동성로 377 성수이마트 업무시설"
                android:layout_width="wrap_content"
                android:textSize="7.5sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6.3dp"
                android:layout_height="wrap_content"
                android:id="@+id/textAddress"
                android:layout_weight="10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/item_check"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/dot_horizontal"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/todo_check"
            android:src="@drawable/no_check"/>

    </LinearLayout>

</LinearLayout>